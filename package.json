{
  "name": "books-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "postinstall": "npx husky install",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "dev": "NODE_ENV=development nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'ts-node -r tsconfig-paths/register src/app.ts'",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "NODE_ENV=production TS_NODE_PROJECT=tsconfig.prod.json node -r tsconfig-paths/register dist/app.js",
    "infra_dev:up": "docker-compose -f docker/infra/docker-compose.yml -f docker/infra-tools/docker-compose.pgadmin.yml up -d",
    "infra_dev:down": "docker-compose -f docker/infra/docker-compose.yml -f docker/infra-tools/docker-compose.pgadmin.yml down",
    "infra_test:up": "docker-compose -f docker/infra/docker-compose.yml up -d",
    "infra_test:down": "docker-compose -f docker/infra/docker-compose.yml down",
    "pretest": "npm run infra_test:up",
    "test": "NODE_ENV=test jest --silent --runInBand --detectOpenHandles --testTimeout=60000",
    "posttest": "npm run infra_test:down",
    "test:ci": "NODE_ENV=test NODE_OPTIONS=--max_old_space_size=4096 jest --ci --runInBand --detectOpenHandles --testTimeout=80000",
    "test:watch": "NODE_ENV=test jest --watch --runInBand --detectOpenHandles --testTimeout=60000",
    "test:coverage": "NODE_ENV=test jest --runInBand --coverage --testTimeout=60000",
    "plantuml_infra:up": "docker-compose -f docker/infra-tools/docker-compose.plantuml.yml up -d",
    "plantuml_infra:down": "docker-compose -f docker/infra-tools/docker-compose.platuml.yml down",
    "db:diagram": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm-uml ./src/orm/config.ts --with-enum-values --plantuml-url=http://localhost:9000",
    "typeorm": "node --require ts-node/register --require tsconfig-paths/register ./node_modules/typeorm/cli.js --config ./src/orm/config.ts",
    "migrate:generate": "npm run typeorm migration:generate -- -n",
    "migrate:create": "npm run typeorm migration:create -- -n",
    "migrate:run": "npm run typeorm migration:run",
    "migrate:revert": "npm run typeorm migration:revert",
    "migrate:show": "npm run typeorm migration:show",
    "seed": "npm run db:drop && NODE_ENV=seed ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js --configName ./src/orm/config.ts seed",
    "db:drop": "NODE_ENV=test ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop --config ./src/orm/config.ts"
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtormo/books-api.git"
  },
  "author": "gtormo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gtormo/books-api/issues"
  },
  "homepage": "https://github.com/gtormo/books-api#readme",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "log4js": "^6.3.0",
    "openapi3-ts": "^2.0.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.2.0",
    "tsconfig-paths": "^3.12.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.41",
    "typeorm-typedi-extensions": "^0.4.1",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-semistandard": "^16.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "typeorm-seeding": "^1.6.1",
    "typeorm-uml": "^1.6.4"
  }
}
